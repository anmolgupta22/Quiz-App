<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="windowActionBar">false</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item> <!-- Adjust the radius as per your preference -->
        <item name="boxCornerRadiusBottomStart">16dp</item> <!-- Adjust the radius as per your preference -->>
        <item name="boxCornerRadiusTopEnd">16dp</item> <!-- Adjust the radius as per your preference -->>
        <item name="boxCornerRadiusTopStart">16dp</item> <!-- Adjust the radius as per your preference -->>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>


</resources>