<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quiz_nav_graph"
    app:startDestination="@id/studentDetailsFragment">

    <fragment
        android:id="@+id/studentDetailsFragment"
        android:name="com.example.quizapp.ui.StudentDetailsFragment"
        android:label="fragment_student_details"
        tools:layout="@layout/fragment_student_details" >

        <action
            android:id="@+id/action_studentDetailsFragment_to_selectCategoriesFragment"
            app:destination="@id/selectCategoriesFragment" >
            <argument
                android:name="name"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/selectCategoriesFragment"
        android:name="com.example.quizapp.ui.SelectCategoriesFragment"
        android:label="fragment_select_categories"
        tools:layout="@layout/fragment_select_categories" >

        <argument
            android:name="name"
            app:argType="string" />

        <action
            android:id="@+id/action_selectCategoriesFragment_to_quizFragment"
            app:destination="@id/quizFragment"
            app:popUpTo="@id/selectCategoriesFragment"
            app:popUpToInclusive="true" >
            <argument
                android:name="categories"
                app:argType="string" />

            <argument
                android:name="level_type"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.quizapp.ui.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" >

        <argument
            android:name="categories"
            app:argType="string" />

        <argument
            android:name="level_type"
            app:argType="string" />
    </fragment>
</navigation>